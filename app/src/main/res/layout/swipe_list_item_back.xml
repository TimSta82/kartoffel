<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:elevation="@dimen/half_grid_unit"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:padding="@dimen/one_grid_unit">

        <View
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swipe_list_item_back_Iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/one_grid_unit"
            android:src="@drawable/ic_cheap"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/swipe_list_item_back_title_Tv"
            style="@style/Text.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            tools:text="Pizza" />

        <ImageView
            android:id="@+id/swipe_list_item_back_minutes_Iv"
            android:layout_width="@dimen/four_grid_unit"
            android:layout_height="@dimen/four_grid_unit"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:src="@drawable/ic_clock"
            app:layout_constraintDimensionRatio="1:3"
            app:layout_constraintEnd_toStartOf="@id/swipe_list_item_back_likes_Iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_title_Tv" />

        <TextView
            android:id="@+id/swipe_list_item_back_minutes_Tv"
            style="@style/Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/swipe_list_item_back_minutes_Iv"
            app:layout_constraintStart_toStartOf="@+id/swipe_list_item_back_minutes_Iv"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_minutes_Iv"
            tools:text="45m" />

        <ImageView
            android:id="@+id/swipe_list_item_back_likes_Iv"
            android:layout_width="@dimen/four_grid_unit"
            android:layout_height="@dimen/four_grid_unit"
            android:layout_marginStart="@dimen/one_grid_unit"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:src="@drawable/ic_likes"
            app:layout_constraintDimensionRatio="1:3"
            app:layout_constraintEnd_toStartOf="@id/swipe_list_item_back_score_Iv"
            app:layout_constraintStart_toEndOf="@+id/swipe_list_item_back_minutes_Iv"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_title_Tv" />

        <TextView
            android:id="@+id/swipe_list_item_back_likes_Tv"
            style="@style/Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/swipe_list_item_back_likes_Iv"
            app:layout_constraintStart_toStartOf="@+id/swipe_list_item_back_likes_Iv"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_likes_Iv"
            tools:text="12" />

        <ImageView
            android:id="@+id/swipe_list_item_back_score_Iv"
            android:layout_width="@dimen/four_grid_unit"
            android:layout_height="@dimen/four_grid_unit"
            android:layout_marginStart="@dimen/one_grid_unit"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:src="@drawable/ic_score"
            app:layout_constraintDimensionRatio="1:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/swipe_list_item_back_likes_Iv"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_title_Tv" />

        <TextView
            android:id="@+id/swipe_list_item_back_score_Tv"
            style="@style/Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/swipe_list_item_back_score_Iv"
            app:layout_constraintStart_toStartOf="@+id/swipe_list_item_back_score_Iv"
            app:layout_constraintTop_toBottomOf="@+id/swipe_list_item_back_likes_Iv"
            tools:text="12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
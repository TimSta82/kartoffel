<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:elevation="@dimen/half_grid_unit"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_10"
        android:orientation="vertical"
        android:padding="@dimen/half_grid_unit">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/first_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/first_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/first_Iv" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/second_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/second_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/second_Iv" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/third_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/third_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/third_Iv" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fourth_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/fourth_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/fourth_Iv" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fifth_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/fifth_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/fifth_Iv" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/six_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/six_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/six_Iv" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/one_grid_unit">

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/seven_Iv"
                    android:layout_width="@dimen/four_grid_unit"
                    android:layout_height="@dimen/four_grid_unit"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cheap" />

                <TextView
                    android:id="@+id/seven_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/two_grid_unit"
                    android:layout_toEndOf="@+id/seven_Iv" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
